{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@steps/*": ["steps/*"],
      "@fixtures/*": ["fixtures/*"],
      "@utils/*": ["utils/*"]
    },
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "features/**/*",
    "steps/**/*",
    "pages/**/*",
    "fixtures/**/*",
    "utils/**/*",
    "*.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "reports",
    "tests"
  ]
}
